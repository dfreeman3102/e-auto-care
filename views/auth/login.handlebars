<style>
    body {
        background-color: #343a40; /* Dark background */
        color: #f8f9fa; /* Light text */
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="form-container">
                <h2 class="text-center">Login</h2>
                <form class="form login-form">
                    <div class="form-group">
                        <label for="email-login">Email:</label>
                        <input class="form-control" type="text" id="email-login" />
                    </div>
                    <div class="form-group">
                        <label for="password-login">Password:</label>
                        <input class="form-control" type="password" id="password-login" />
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6 mt-4 mt-md-0">
            <div class="form-container">
                <h2 class="text-center">Signup</h2>
                <form class="form signup-form">
                    <div class="form-group">
                        <label for="username-signup">Username:</label>
                        <input class="form-control" type="text" id="username-signup" name="userName" />
                    </div>
                    <div class="form-group">
                        <label for="password-signup">Password:</label>
                        <input class="form-control" type="password" id="password-signup" name="password" />
                    </div>
                    <div class="form-group">
                        <label for="email-signup">Email:</label>
                        <input class="form-control" type="text" id="email-signup" name="email" />
                    </div>
                    <div class="form-group">
                        <label for="first-name-signup">First Name:</label>
                        <input class="form-control" type="text" id="first-name-signup" name="firstName" />
                    </div>
                    <div class="form-group">
                        <label for="last-name-signup">Last Name:</label>
                        <input class="form-control" type="text" id="last-name-signup" name="lastName" />
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary" type="submit">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Link to login.js -->
<script src="./js/login.js"></script>
